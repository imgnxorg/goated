{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es2015", "esnext", "dom"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "src",
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["../src/**/*"]
}
